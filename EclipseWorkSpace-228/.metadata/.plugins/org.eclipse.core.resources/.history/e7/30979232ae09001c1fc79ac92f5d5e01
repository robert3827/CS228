package edu.iastate.cs228.jUnits;

public class Circle {
	
	private int x;
	private int y;
	private int radius;
	
	public Circle() {
		x = 0;
		y = 0;
		radius = 5;
	}

	public Circle(int x, int y) {
		this.x = x;
		this.y = y;
		radius = 5;
	}

	public Circle(int x, int y, int radius) {
		if(radius < 0)
			throw new IllegalArgumentException("Radius must be +ive.");
		this.x = x;
		this.y = y;
		this.radius = radius;
	}
	
	
	
	public int getX() {
		return x;
	}
	
	public int getY() {
		return y;
	}
	
	public int getRadius() {
		return radius;
	}
	
	public void setX(int x) {
		this.x = x;
	}
	
	public void setY(int y) {
		this.y = y;
	}
	
	public void setRadius(int radius) {
		this.radius = radius;
	}
	
	public boolean inCircle(int x, int y) {
		int distanceSq = (this.x-x)*(this.x-x) + (this.y-y)*(this.y-y);
		return distanceSq < radius*radius;
	}

}
