package edu.iastate.cs228.debug;

import java.util.ArrayList;

public class debugExample {
	
	public static void printArray(int[] intArray) {
		for(int i = 0; i <= intArray.length; i++) {
			System.out.println(intArray[i]);
		}
	}
	
	public static void printSum(int n) {
		System.out.println(nSumRec(n));
	}
	// n + n-1 + n-2 + ... + 1
	public static int nSumRec(int n) {
		return n + nSumRec(n-1);
	}
	
	public static void printSentence() {
		ArrayList<String> sentence = new ArrayList<String>();
		sentence.add("This ");
		sentence.add("is ");
		sentence.add("ComS ");
		sentence.add("228 ");
		sentence.add("recitation.");
		for(int i = 0; i < 6; i++) {      //error 6 -> 5
			String b = sentence.get(i);
			System.out.print(b);
		}
	}
	
	public static void main(String[] args) {
		int[] intArray = {0, 1, 2, 3, 4};
		printArray(intArray);
		printSum(3);
//		printSentence();
	}
	
}
